= form_with model: post, local: true, html: { class: 'form form-horizontal post' } do |f|
  .form-group
    = f.label :title, class: 'control-label col-lg-2'
    .col-md-10
      = f.text_field :title, class: 'form-control', required: true
      = f.error_span :title
  .form-group
    = f.label :body, class: 'control-label col-lg-2'
    .col-md-10
      = f.text_area :body, class: 'form-control'
      = f.error_span :body
  .form-group
    = f.label :video, class: 'control-label col-lg-2'
    .col-md-10
      = f.file_field :video, class: 'form-control'
      = f.error_span :video
  .form-group
    .col-md-offset-2.col-md-10
      = f.submit nil, class: 'btn btn-primary'
      = link_to 'Cancel', posts_path, :class => 'btn btn-default'