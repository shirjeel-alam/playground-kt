.page-header
  %h1= "Post - #{@post.id}"

%p
  %strong Title
  %br
  = @post.title

%p
  %strong Body
  %br
  = @post.body

%video.video-js.vjs-default-skin{ controls: true, style: 'width:auto;height:250px' } 
  %source{ src: @post.video.mp4.url, type: 'video/mp4' }
  %source{ src: @post.video.webm.url, type: 'video/webm' }

%br

= link_to 'Back', posts_path, class: 'btn btn-default'
= link_to 'Edit', edit_post_path(@post), class: 'btn btn-default'
= link_to 'Destroy', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'