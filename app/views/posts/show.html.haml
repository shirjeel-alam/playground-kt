.page-header
  %h1= "Post - #{@post.id}"

%p
  %strong Title
  %br
  = @post.title

%p
  %strong Body
  %br
  = @post.body

- if @post.video.url.present?
  %p
    = video_tag @post.video.url, size: '500x500', controls: true, autobuffer: true

- if @post.video.mp4.present?
  %p
    = video_tag @post.video.mp4.url, size: '500x500', controls: true, autobuffer: true

- if @post.video.webm.present?
  %p
    = video_tag @post.video.webm.url, size: '500x500', controls: true, autobuffer: true

- if @post.video.thumbnail.present?
  %p
    = image_tag @post.video.thumbnail.url

= link_to 'Back', posts_path, class: 'btn btn-default'
= link_to 'Edit', edit_post_path(@post), class: 'btn btn-default'
= link_to 'Destroy', post_path(@post), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'